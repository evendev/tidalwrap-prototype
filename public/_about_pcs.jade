section#about-pcs.section-pcs.section-padded
  .container-fluid
    .row
      .col-sm-12.text-center
        p.wow.fadeIn: img.pcs-logo(src='/img/pcs-logo.png', alt='#{ partners.pcs.fullName }')
        h2= partners.pcs.fullName
        p: a.external(href='#{ partners.pcs.url }', target='_blank')= partners.pcs.domain
    hr
    .row.wow.fadeInDown
      each item, i in aboutPcs.items
        if i == 2
          .clearfix
        .col-sm-6
          h3= item.title
          br
          p= item.body
