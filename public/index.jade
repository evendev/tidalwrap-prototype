section#the-problem
  .container-fluid
    .row
      .col-sm-12
        .page-header
          h2.text-center The Problem
        p.lead.text-center Unprotected marine steel pilings erode prematurely, resulting in corrosion of pilings and a weaker structure.
  .container-fluid.wow.fadeInLeftBig
    .row
      .col-xs-3
        img.thumbnail.img-responsive(src='img/problem-1.jpg', alt)
      .col-xs-3
        img.thumbnail.img-responsive(src='img/problem-2.jpg', alt)
      .col-xs-3
        img.thumbnail.img-responsive(src='img/problem-3.jpg', alt)
      .col-xs-3
        img.thumbnail.img-responsive(src='img/problem-4.jpg', alt)
  .container-fluid.wow.fadeInRightBig
    .row
      .col-sm-12
        .page-header
          h2.text-center The Solution
        p.lead.text-center Tidal Wrap protects pilings, improving the stability and longevity of the structure for years to come.
  .container-fluid
    .row.wow.fadeInDown
      .col-sm-4.col-sm-offset-2
        img.thumbnail.img-responsive(src='img/tidal-wrap.jpg', alt)
      .col-sm-4
        img.thumbnail.img-responsive(src='img/liner.jpg', alt)

section#overview.section-padded
  .container-fluid
    .page-header.text-center
      h2 Overview of Tidal Wrap
    .row
      .col-sm-6
        each item in blocks.intro
          .wow.bounceInLeft
            h3= item.title
            p= item.body
      .col-sm-6
        p.wow.bounceInLeft: img.img-responsive(src='img/piling-en.png', alt)

